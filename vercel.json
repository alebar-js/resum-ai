{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm build",
  "outputDirectory": "packages/client/build",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    },
    {
      "source": "/auth/:path*",
      "destination": "/api"
    }
  ],
  "functions": {
    "packages/api/api/index.ts": {
      "runtime": "@vercel/node@3.0.0",
      "includeFiles": "packages/api/dist/**"
    }
  }
}

